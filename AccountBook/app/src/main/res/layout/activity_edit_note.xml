<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.imti.accountbook.EditNote"
    android:background="#ECEFF1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/edit_sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/edit_rL2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/edit_tv1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#2196F3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/edit_et1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write new date"
                android:textSize="18dp"
                android:textColor="#101010"
                android:textColorHint="#101010"
                android:textAlignment="center"
                android:layout_below="@id/edit_tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/edit_et2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Write updated details"
                android:textSize="18dp"
                android:textColor="#101010"
                android:textColorHint="#101010"
                android:textAlignment="center"
                android:layout_below="@id/edit_et1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_LL1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit_b1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Back"
            android:textSize="20dp"
            android:textColor="#ECEFF1"
            android:textStyle="bold"
            android:background="#2196F3"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:onClick="clickedOn_edit_b1_back"/>
        <Button
            android:id="@+id/edit_b2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Update"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ECEFF1"
            android:background="#2196F3"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:onClick="clickedOn_edit_b2_update"/>
    </LinearLayout>
</RelativeLayout>
